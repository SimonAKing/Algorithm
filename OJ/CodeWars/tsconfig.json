{
	"compilerOptions": {
			"target": "es2020",
			"module": "commonjs",
			"declaration": true,
			"noImplicitAny": true,
			"removeComments": true,
			"experimentalDecorators": true,
			"rootDir": ".",
			"sourceMap": true,
			"listFiles": true,
			"noEmitOnError": true
	},
	"ts-node": {
		// these options are overrides used only by ts-node
		// same as our --compilerOptions flag and our TS_NODE_COMPILER_OPTIONS environment variable
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"filesGlob": [
			"./**/*.ts",
			"./**/*.tsx",
			"!./**/*.d.ts",
			"!./gulpfile.ts",
			"./typings/**/*.d.ts",
			"!./node_modules/**/*.ts",
			"./node_modules/typescript/lib/lib.es6.d.ts"
	],
	"exclude": []
}
